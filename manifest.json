{
  "manifest_version": 3,
  "name": "Simple Tab Deduplicate",
  "description": "Spot duplicate tabs at a glance and close them with confidence.",
  "version": "0.1.0",
  "minimum_chrome_version": "114",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Simple Tab Deduplicate",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "commands": {
    "deduplicate-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Close duplicate tabs using your saved preferences"
    }
  }
}
